
		<form action="{{$loginbarForm->action}}" name="{{$loginbarForm->name}}" method="post">
			
			{{foreach from=$loginbarForm->fields item=field}}
				{{$field->label}}: <input type="{{$field->type}}" name="{{$field->name}}" value="{{$field->value}}" size="{{$field->size}}" maxlength="{{$field->maxlength}}">
				&nbsp;&nbsp;&nbsp;
			{{/foreach}}

			{{foreach from=$loginbarForm->hiddenFields item=field}}
				<input type="hidden" name="{{$field->name}}" value="{{$field->value}}">
			{{/foreach}}

			<input type="submit" value="{{$loginbarForm->submitString}}">


			
			{{* this portion will only be shown for MSauth, for users to register *}}

			{{if $registerOption}}
				&nbsp;&nbsp;&nbsp;&nbsp;
				<span class="smalltext">
					<i>
					{{$smarty.const._NOTMEMBER_REGISTER}} <a href="register.php" style="color:white">{{$smarty.const._WORD_HERE}}</a>.
					</i>
				</span>
			{{/if}}

		</form>
