

<form action="{{$searchform->action}}" name="{{$searchform->name}}" method="post">

	<table cellpadding="0" cellspacing="0">
		<tr>
			{{foreach from=$searchform->fields item=field}}
				<td style="border:1px solid black">
					<span class="normaltext">
						{{$field->label}} 
					</span>
				</td>
			{{/foreach}}
		</tr>
		<tr>
			{{foreach from=$searchform->fields item=field}}
				<td style="border:1px solid black">
					<input type="{{$field->type}}" name="{{$field->name}}" value="{{$field->value}}" size="{{$field->size}}" maxlength="{{$field->maxlength}}">
				</td>
			{{/foreach}}
		</tr>
	</table>

	{{foreach from=$searchform->hiddenFields item=field}}
		<input type="hidden" name="{{$field->name}}" value="{{$field->value}}">
	{{/foreach}}
	
	<input type="submit" value="{{$searchform->submitString}}">
</form>





{{*generate the search results if there are any*}}


