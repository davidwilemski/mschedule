<h1>{{$smarty.const._THANKSFORCHOOSING}}</h1>


<br>

{{$smarty.const._BLOCKTEXT_REGISTERPAGE}}

<form action="{{$regForm->action}}" name="{{$regForm->name}}" method="post">
	{{foreach from=$regForm->fields item=field}}
	
		<br>
		
		<i>{{$field->label}}</i>

		<span class="outerbox" style="padding: 5px;">
			<input type="{{$field->type}}" name="{{$field->name}}" value="{{$field->value}}" size="{{$field->size}}" maxlength="{{$field->maxlength}}">
		
			{{if $field->name == "uniqname"}}
				<b>@{{$cfg.defaultDomain}}</b>
			{{/if}}
		</span>
	
	{{/foreach}}

	
	{{foreach from=$regForm->hiddenFields item=field}}
		<input type="hidden" name="{{$field->name}}" value="{{$field->value}}">
	{{/foreach}}
	
	<input type="submit" value="{{$regForm->submitString}}">
</form>